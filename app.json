{
  "id": "com.gruijter.sms",
  "name": {
      "en": "Send SMS"
  },
  "version": "0.0.2",
  "compatibility": "0.9.x || 1.x",
  "author": {
      "name": "Robin Gruijter",
      "email": "gruijter@hotmail.com"
  },
  "category": "tools",
  "description": {
      "en": "Homey app to send text messages over SMS",
      "nl": "Homey app om SMS te versturen"
  },
  "images": {
  "large": "./assets/images/large.jpg",
  "small": "./assets/images/small.jpg"
  },
  "flow": {
    "actions": [
      {
        "id": "send_sms",
        "title": {
            "en": "Send an SMS",
            "nl": "Stuur een SMS"
        },
        "args": [
          {
            "name": "number",
            "type": "text",
            "placeholder": {
              "en": "Number",
              "nl": "Nummer"
             }
          },
          {
            "name": "msg",
            "type": "text",
            "placeholder": {
              "en": "Text",
              "nl": "Tekst"
             }
          }
        ]
      }
    ]
  }
}
